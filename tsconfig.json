{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"module": "ES2022",
		"noImplicitAny": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"vitest.config.ts",
		"playwright.config.ts",
		"src/**/*.astro",
		"src/**/*.ts",
		"src/**/*.svelte",
		"api/*.ts"
	]
}
