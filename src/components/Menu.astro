---
import { Debug } from 'astro/components';

const currentPath = Astro.url.pathname;

const menuItems = [
	{ link: '/', name: 'Página Inicial', active: false },
	{ link: '/anamnese', name: 'Ficha de Anamnese', active: false},
	{ link: '/pacientes', name: 'Pacientes', active: false},
	{ link: '/financas', name: 'Finanças', active: false}
];

menuItems.map(item => {
	if (item.link === currentPath) {
		item.active = true;
	}
});
---

<nav class="navbar navbar-expand-lg mb-3">
  <div class="container">
    <a class="navbar-brand" href="#">Satiluz</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
				{ menuItems.map(item => (
					<li class="nav-item">
						<a class={item.active ? 'nav-link active' : 'nav-link'} aria-current="page" href={item.link}>{item.name}</a>
					</li>
				))}
      </ul>
    </div>
  </div>
</nav>

<style lang="scss">
	.navbar {
		background-color: #fedeff;
	}
</style>
